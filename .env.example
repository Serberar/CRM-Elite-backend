# ==========================================
# BACKEND - BUSCADOR ELITE 
# ==========================================

# =====================
# FRONTEND
# =====================
# URL del frontend para redirects y cookies
FRONTEND_URL=http://direcciondelfrontend.com

# =====================
# BASE DE DATOS
# =====================
DATABASE_URL="postgresql://usuario:contraseña@localhost:5432/base?schema=public"

# =====================
# PUERTO
# =====================
PORT=3001

# =====================
# CORS
# =====================
# true = Permite cualquier origen 
# false = Restringe a los dominios especificados más abajo
ALLOW_ALL_CORS=false
CORS1=http://direccionpermitida.com
CORS2=http://direccionpermitida.com
CORS3=http://direccionpermitida.com

# =====================
# FILTRO DE IP (OPCIONAL)
# =====================
# true = solo IPs permitidas pueden acceder
# false = cualquier IP puede acceder
FILTER_IPS=false

# IPs permitidas (solo se usan si FILTER_IPS=true)
IP1=100.100.100.100
IP2=100.100.100.100
IP3=100.100.100.100

# =====================
# JWT - AUTENTICACIÓN
# =====================
JWT_SECRET=clave_secreta_para_jwt
JWT_EXPIRES_IN=8h

JWT_REFRESH_SECRET=clave_secreta_para_jwt_refresh
JWT_REFRESH_EXPIRES_IN=7d

# =====================
# ENTORNO
# =====================
# development para desarrollo local
# production para producción
NODE_ENV=production

# =====================
# MÉTRICAS Y MONITOREO
# =====================
ENABLE_METRICS=true
# Puerto para métricas (opcional, usa PORT por defecto)
PROMETHEUS_PORT=9090